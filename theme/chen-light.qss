}

/* 【工具栏】 */
QToolBar {
    spacing: 1px; /* 工具按钮间距 */
    border: none;
    background-color: transparent;
}
/* 工具栏 */
QToolBar::separator, /* 分隔线 */
QToolBar:handle {    /* 拖动的那个地方 */
    border: none;
    width: 0px;
}

/* 【工具按钮】 */
QToolButton {
    background: transparent;
    border: none;   /* 无边框 */
    margin: 1px;    /* 边距 */
    color: #74787c; /* 文字颜色 */
    height: 11px;   /* 按钮高度 */
    border-radius: 7px;
}
/* 工具按钮：鼠标悬停 */
QToolButton:hover {
    color: #00BFFF;
    border: 1px solid transparent; /* 加透明边框，实现图标缩小的效果 */
}
/* 工具按钮：鼠标按下 */
QToolButton:pressed {
    background-color: none;
    /* border: none; */
}
/* 工具按钮：选中 */
QToolButton:checked {
    background-color: #d3d7d4;
    /* background-color: #C6E2FF; */
    /* background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #C6E2FF, stop: 0.8 transparent, stop: 1 transparent); */
    color: #464547;
    /* font-weight: bold; */
    border: none;
}
/* 下拉工具按钮 */
QToolButton[popupMode="1"] {
    background-color: transparent;
    padding-right: 8px;
}
/* 下拉工具按钮：鼠标悬停 */
/* QToolButton[popupMode="1"]:hover {
    border: none;
} */
/* 下拉工具按钮 */
QToolButton[popupMode="2"] {
    background-color: transparent;
    padding-right: 0px;
}
/* 下拉工具按钮：鼠标悬停 */
/* QToolButton[popupMode="2"]:hover {
    border: 1px solid transparent;
} */
/* 工具按钮：下拉按钮 */
QToolButton::menu-button {
    background-color: transparent;
    border: none;
}
/* 工具按钮：下拉箭头 */
