/* 【提示框】 */
QToolTip {
    background-color: #E8E8E8;
    color: #464547;
    border: none;
    padding: 5px; /* 文本边距 */
    opacity: 160; /* 透明度 */
}

/* 【树形控件】 */
QTreeView::item:hover {
    color: #00BFFF;
    background-color: transparent;
    border: none;
}
/* 树形控件：选项：选中 */
/* QTreeView::item:selected {
    background-color: #d3d7d4;
    border-radius: 10px;
} */
/* 树形控件：选项：选中：激活 */
QTreeView::item:selected:active{
    color: #ea66a6;
    font-weight: bold;
    background-color: transparent;
    border: none;
}
/* 树形控件：选项：选中：非激活 */
QTreeView::item:selected:!active {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 transparent, stop: 0.5 #d3d7d4, stop: 1 transparent);
    border-radius: 10px;
    border: none;
    font-weight: bold;
}

/* 【状态栏】 */
QStatusBar QLabel {
    border: none;
    color: #74787c;
    padding-right: 6px;
}
/* 状态栏：鼠标悬停 */
QStatusBar QLabel:hover {
    color: #464547;
    font-weight: bold;
}

/* 【去掉边框】 */
QHeaderView::section,QTableView QTableCornerButton::section,QTabWidget::pane,
QStatusBar::item,QWidget::pane,QTreeView,QListView,QLabel,QStatusBar,QSizeGrip,
QAbstractScrollArea {
    background: transparent;
    border: none;
}
