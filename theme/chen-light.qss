    background-color: #90d7ec;
    border: none;
    width: 8px;
    height: 8px;
    border-radius: 4px;
} */
/* 工具按钮：下拉箭头：鼠标悬停 */
/* QToolButton::menu-arrow:hover {
    border: 1px solid transparent;
} */
/* 工具按钮：下拉箭头：展开 */
QToolButton::menu-arrow:open {
    /* background-color: #f15b6c; */
    top: 1px;
}
/* 工具按钮：下拉箭头 */
QToolButton::menu-indicator {
    width: 0;
    height: 0;
}

/* 【菜单栏】 */
QMenuBar {
    height: 0; /* 去掉菜单栏 */
}
/* 菜单栏：菜单项：禁用 */
QMenuBar::item:disabled {
    color: #8a8c8e;
}
/* 菜单栏：菜单项：鼠标悬停 */
QMenuBar::item:selected {
    color: #00BFFF;
}
/* 菜单栏：菜单项：鼠标点击 */
QMenuBar::item:pressed {
    background-color: #C6E2FF;
    color: #464547;
    border-radius:8px;
}

/* 【菜单】 */
QMenu {
    background-color: #eeeeee;
    border: none;
    margin: 1px;
}
/* 菜单：分隔线 */
QMenu::separator {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #eeeeee, stop: 0.5 #33a3dc, stop: 1 #eeeeee);
    height: 1px;
}
/* 菜单：菜单项 */
QMenu::item {
    background-color: transparent;
}
/* 菜单：菜单项：鼠标悬停*/
QMenu::item:selected {
    color: #00BFFF;
}

/* 【输入框】 */
QLineEdit {
    border-bottom: 1px solid qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #74787c, stop: 1 transparent);
    border-left: none;
    border-right: none;
    border-top: none;
    padding: 0 4px; /* 边距 */
    /* color: #464547; */ /* 文字颜色 */
    /* selection-background-color: #74787c; */ /* 选中背景色 */
}
/* 输入框：编辑 */
QLineEdit:focus {
    border-bottom: 1px solid #7bbfea;
}

/* 【文本框】 */
QTextEdit {
    border: 1px solid #74787c;
}

/* 【滚动条】 */
/* 垂直滚动条 */
QScrollBar:vertical {
    background-color: transparent;
    border: none; /* 无边框 */
    width: 6px;   /* 宽度 */
    margin: 0;    /* 上下填满 */
}
/* 垂直滚动条：滑块 */
QScrollBar::handle:vertical {
    background-color: rgba(135, 206, 250, 0.4);
    border: 2px solid #F2F2F2; /* 加一个粗边框让滑块变细 */
    border-radius: 3px;        /* 设置圆角，不要超过宽度的一半 */
    min-height: 10px;          /* 最小高度=width+上边框+下边框 */
}
/* 滚动条：滑块：鼠标悬停 */
QScrollBar::handle:horizontal:hover,
QScrollBar::handle:vertical:hover {
    background-color: rgba(135, 206, 250, 0.7);
    border: 1px solid #F2F2F2; /* 减小边框实现一个放大效果 */
    border-radius: 3px;        /* 设置圆角，不要超过宽度的一半 */
}
/* 垂直滚动条：下面的翻页按钮 */
QScrollBar::add-line:vertical {
    background-color: transparent;
    border: none;
    height: 0px;                 /* 不要显示它 */
    subcontrol-position: bottom; /* 显示位置 */
    subcontrol-origin: margin;
}
/* 垂直滚动条：上面的翻页按钮 */
QScrollBar::sub-line:vertical {
    background-color: transparent;
    border: none;
    height: 0px;              /* 不要显示它 */
    subcontrol-position: top; /* 显示位置 */
    subcontrol-origin: margin;
}
/* 滚动条：翻页按钮的箭头 */
QScrollBar::up-arrow:horizontal,
QScrollBar::down-arrow:horizontal,
QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical {
    background: transparent;
    border: none;
    width: 0;   /* 不要显示它 */
    height: 0;  /* 不要显示它 */
}
/* 滚动条：滑动槽 */
QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal,
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: transparent; /* 不要显示它 */
    border: none;            /* 不要显示它 */
}
/* 水平滚动条 */
QScrollBar:horizontal {
    background-color: transparent;
    border: none; /* 无边框 */
    height: 6px;  /* 宽度 */
    margin: 0;    /* 上下填满 */
}
/* 水平滚动条：滑块 */
QScrollBar::handle:horizontal {
    background-color: rgba(135, 206, 250, 0.4);
    border: 2px solid #F2F2F2; /* 加一个粗边框让滑块变细 */
    border-radius: 3px;        /* 设置圆角，不要超过宽度的一半 */
    min-width: 10px;           /* 最小高度=width+上边框+下边框 */
}
/* 水平滚动条：右边的翻页按钮 */
QScrollBar::add-line:horizontal {
    background-color: transparent;
    border: none;
    width: 0px; /* 不要显示它 */
    subcontrol-position: right;
    subcontrol-origin: margin;
}
/* 水平滚动条：左边的翻页按钮 */
QScrollBar::sub-line::horizontal {
    background-color: transparent;
    border: none;
    width: 0px; /* 不要显示它 */
    subcontrol-position: left;
    subcontrol-origin: margin;
}

/* 【数字输入框】 */
QDoubleSpinBox,QSpinBox {
    /* 渐变边框 */
    border-bottom: 1px solid qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #74787c, stop: 1 transparent);
    border-left: none;
    border-right: none;
    border-top: none;
    padding-left: 5px; /* 文本左边距 */
    color: #2468a2;    /* 文本颜色 */
}
/* 数字输入框：上面按钮 */
QDoubleSpinBox::up-button,
QSpinBox::up-button {
    background-color: #f58f98;
    border: 1px solid #F2F2F2;
    border-radius: 4px;
    width: 6px;
}
/* 数字输入框：上面按钮：鼠标悬停 */
QDoubleSpinBox::up-button:hover,
QSpinBox::up-button:hover {
    background-color: #f05b72;
    border: 1px solid #F2F2F2;
    border-radius: 4px;
    width: 6px;
}
/* 数字输入框：下面按钮 */
QDoubleSpinBox::down-button,
QSpinBox::down-button { 
    background-color: #72baa7;
    border: 1px solid #F2F2F2;
    border-radius: 4px;
    width: 6px;
}
/* 数字输入框：下面按钮 */
QDoubleSpinBox::down-button:hover,
QSpinBox::down-button:hover { 
    background-color: #00ae9d;
    border: 1px solid #F2F2F2;
    border-radius: 4px;
    width: 6px;
}
/*数字框：上下箭头*/
QDoubleSpinBox::up-arrow,
QDoubleSpinBox::down-arrow,
QSpinBox::up-arrow,
QSpinBox::down-arrow {
    background-color: transparent;
    border: none;
}

/* 【列表控件】 */
QListView::item {
    background: transparent;
    border: none;
    color: #74787c;
}
/* 列表控件：列表项：鼠标悬停+选中 */
QListView::item:hover,
QListView::item:selected:active {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #B9D3EE, stop: 1 transparent);
    border-radius: 7px;
    border: none;
    color: #464547;
}
/* 列表控件：列表项：激活状态 */
QListView::item:selected:!active {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #d3d7d4, stop: 1 transparent);
    border-radius: 7px;
    border: none;
    color: #464547;
}

/* 【组合框】【标签】 */
QGroupBox::title,
QLabel {
    color: #74787c;
}

